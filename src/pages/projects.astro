---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { healthAcademyLogo, butAScratch, nosto, symbold } from "../images";
---

<BaseLayout title="Projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">My projects</div>
  </div>

  <HorizontalCard
    title="Symbold"
    img={symbold}
    desc="A modern site for the marvelous branding agency Symbold."
    url="https://symbold.ro"
    badge="Web, Branding"
  />

  <HorizontalCard
    title="HealthAcademy"
    img={healthAcademyLogo}
    desc="A site for the marvelous HealthAcademy from Cluj."
    url="https://health-academy.ro"
    badge="Web"
  />

  <HorizontalCard
    title="Nosto"
    img={nosto}
    desc="A site for the real state developer NOSTO from Timisoara."
    url="https://nosto.ro"
    badge="Web"
  />

  <HorizontalCard
    title="Mounty"
    img={butAScratch}
    desc="A Python wrapper for the wonderful Mountebank REST API. Use it for testing your services in isolation."
    url="https://github.com/vicusbass/mounty"
    badge="Python, Testing"
  />
</BaseLayout>
